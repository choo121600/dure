{
  "name": "dure",
  "version": "0.1.0",
  "description": "Agentic Software Engineering MVP - 4 agents work cooperatively with human oversight, named after the Korean tradition of collaborative farming (두레)",
  "type": "module",
  "main": "dist/cli/index.js",
  "bin": {
    "dure": "dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc && npm run copy-assets",
    "copy-assets": "mkdir -p dist/server/public && cp -r src/server/public/* dist/server/public/ && mkdir -p dist/templates && cp -r templates/* dist/templates/ && cp src/server/openapi.yaml dist/server/",
    "dev": "tsx src/cli/index.ts",
    "dev:server": "tsx src/server/standalone.ts --port 3000 --project-root .",
    "start": "node dist/cli/index.js",
    "watch": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "screenshots": "node dist/cli/index.js screenshots generate",
    "screenshots:verify": "node dist/cli/index.js screenshots verify",
    "screenshots:force": "node dist/cli/index.js screenshots generate --force",
    "screenshots:archive": "node dist/cli/index.js screenshots archive",
    "docs:cli": "tsx scripts/generate-cli-docs.ts",
    "docs:cli:verify": "tsx scripts/generate-cli-docs.ts --verify",
    "predocs": "npm run screenshots && npm run docs:cli",
    "prepare": "husky"
  },
  "keywords": [
    "ai",
    "agents",
    "code-generation",
    "orchestration"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "blessed": "^0.1.81",
    "chalk": "^5.3.0",
    "chokidar": "^3.5.3",
    "commander": "^12.0.0",
    "cors": "^2.8.6",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "open": "^10.0.0",
    "pino": "^10.3.0",
    "pino-http": "^11.0.0",
    "socket.io": "^4.7.0",
    "swagger-ui-express": "^5.0.1",
    "yamljs": "^0.3.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.0",
    "@types/blessed": "^0.1.25",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/helmet": "^0.0.48",
    "@types/node": "^20.10.0",
    "@types/supertest": "^6.0.3",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/yamljs": "^0.2.34",
    "@vitest/coverage-v8": "^4.0.18",
    "ansi-to-svg": "^1.4.3",
    "husky": "^9.1.7",
    "pino-pretty": "^13.1.3",
    "socket.io-client": "^4.8.3",
    "strip-ansi": "^7.1.2",
    "supertest": "^7.2.2",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
