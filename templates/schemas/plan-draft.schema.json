{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["title", "phases", "estimated_total_tasks"],
  "properties": {
    "title": {
      "type": "string",
      "maxLength": 50
    },
    "granularity": {
      "type": "string",
      "enum": ["auto", "task", "phase"],
      "default": "auto"
    },
    "phases": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["number", "title", "description", "tasks"],
        "properties": {
          "number": {
            "type": "integer",
            "minimum": 1
          },
          "title": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "tasks": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "required": ["number", "title", "briefing", "completion_criteria"],
              "properties": {
                "number": {
                  "type": "integer",
                  "minimum": 1
                },
                "title": {
                  "type": "string"
                },
                "description": {
                  "type": "string"
                },
                "depends_on": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  },
                  "default": []
                },
                "briefing": {
                  "type": "string"
                },
                "expected_artifacts": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  },
                  "default": []
                },
                "completion_criteria": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  },
                  "minItems": 1
                }
              }
            }
          },
          "run_groups": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["name", "tasks", "rationale"],
              "properties": {
                "name": {
                  "type": "string"
                },
                "tasks": {
                  "type": "array",
                  "items": {
                    "type": "integer",
                    "minimum": 1
                  },
                  "minItems": 1
                },
                "rationale": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "estimated_total_tasks": {
      "type": "integer",
      "minimum": 1
    },
    "estimated_total_runs": {
      "type": "integer",
      "minimum": 1
    },
    "key_risks": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "default": []
    },
    "assumptions": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "default": []
    }
  }
}
