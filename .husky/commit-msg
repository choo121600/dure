#!/bin/sh

# ============================================
# Dure Commit Message Validation
# ============================================
# Conventional Commits 형식 검증
# https://www.conventionalcommits.org/
# 우회: git commit --no-verify (권장하지 않음)
# ============================================

COMMIT_MSG_FILE=$1
COMMIT_MSG=$(cat "$COMMIT_MSG_FILE")

# 첫 번째 줄만 검사 (제목)
FIRST_LINE=$(echo "$COMMIT_MSG" | head -n 1)

# ============================================
# 예외 케이스 처리
# ============================================

# 1. Merge commits (git merge 시 자동 생성)
if echo "$FIRST_LINE" | grep -qE "^Merge (branch|pull request|remote-tracking)"; then
  exit 0
fi

# 2. Rebase/Squash 관련 (git rebase -i 시 자동 생성)
if echo "$FIRST_LINE" | grep -qE "^(fixup|squash)! "; then
  exit 0
fi

# 3. Initial commit
if echo "$FIRST_LINE" | grep -qE "^Initial commit$"; then
  exit 0
fi

# 4. GitHub 자동 생성 메시지
if echo "$FIRST_LINE" | grep -qE "^(Revert \"|Update |Create |Delete |Rename )"; then
  exit 0
fi

# 5. 빈 줄 또는 주석만 있는 경우 (git commit --allow-empty-message)
if [ -z "$(echo "$FIRST_LINE" | grep -v '^#' | grep -v '^$')" ]; then
  exit 0
fi

# ============================================
# Conventional Commits 검증
# ============================================
# 형식: <type>(<scope>): <description>
# 또는: <type>: <description>
#
# type: feat, fix, docs, style, refactor, perf, test, build, ci, chore, revert
# scope: 선택적, 영향 범위 (cli, core, server, agents, docs 등)
# description: 변경 사항 설명 (소문자 시작, 마침표 없음 권장)

PATTERN="^(feat|fix|docs|style|refactor|perf|test|build|ci|chore|revert)(\([a-zA-Z0-9_-]+\))?: .{1,}"

if ! echo "$FIRST_LINE" | grep -qE "$PATTERN"; then
  echo ""
  echo "Invalid commit message format!"
  echo ""
  echo "Your message:"
  echo "  $FIRST_LINE"
  echo ""
  echo "Expected format:"
  echo "  <type>(<scope>): <description>"
  echo "  <type>: <description>"
  echo ""
  echo "Types:"
  echo "  feat     - 새로운 기능"
  echo "  fix      - 버그 수정"
  echo "  docs     - 문서 변경"
  echo "  style    - 코드 포맷팅 (기능 변경 없음)"
  echo "  refactor - 리팩토링 (기능 변경 없음)"
  echo "  perf     - 성능 개선"
  echo "  test     - 테스트 추가/수정"
  echo "  build    - 빌드 시스템, 외부 의존성"
  echo "  ci       - CI 설정"
  echo "  chore    - 기타 변경사항"
  echo "  revert   - 커밋 되돌리기"
  echo ""
  echo "Scopes (optional):"
  echo "  cli, core, server, agents, tui, docs, config"
  echo ""
  echo "Examples:"
  echo "  feat(cli): add screenshot command"
  echo "  fix(core): resolve memory leak in watcher"
  echo "  docs: update API documentation"
  echo "  refactor(server): extract socket handler"
  echo ""
  exit 1
fi

# ============================================
# 추가 검증 (선택적 경고)
# ============================================

# 제목 길이 경고 (72자 권장)
TITLE_LEN=$(echo "$FIRST_LINE" | wc -c | tr -d ' ')
if [ "$TITLE_LEN" -gt 72 ]; then
  echo ""
  echo "Warning: Commit title is ${TITLE_LEN} characters (recommended: <=72)"
  echo "Consider shortening: $FIRST_LINE"
  echo ""
  # 경고만 출력, 커밋은 허용
fi

# 성공
echo "Commit message format OK."
